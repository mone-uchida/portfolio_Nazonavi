<div class="popular-event">
  <div class="info">
    <%= link_to popular_event.name, event_path(popular_event) %>
    <img src="https://<%= Rails.application.credentials.aws[:s3_URL] %>/titles/event_image/<%= popular_event.image %>" >
    <p>会場: <%= link_to popular_event.place, spot_path(popular_event.spot_id) %><p>
    <% if popular_event.start_at.present? %>
      <p>イベント開始日: <%= popular_event.start_at.strftime('%Y年%m月%d日') %></p>
    <% else %>
      <p>イベント開始日: - </p>
    <% end %>    
    <% if popular_event.finish_at.present? %>
      <p>イベント終了日: <%= popular_event.finish_at.strftime('%Y年%m月%d日') %></p>
    <% else %>
      <p>イベント終了日: - </p>
    <% end %>
  </div>
</div>  
