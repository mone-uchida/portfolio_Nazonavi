<!DOCTYPE html>
<html>
  <head>
    <title>MysterySearch</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= include_gon %>
  </head>
  <body>
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
    <% unless current_page?("/") %>
      <% if logged_in? %>
        <%= react_component 'UsersHeader', user: @current_user %>
        <%= link_to "ログアウト", logout_path, method: "delete" %>
      <% else %>
        <%= react_component 'GuestsHeader' %>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
