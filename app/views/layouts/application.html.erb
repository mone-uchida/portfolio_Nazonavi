<!DOCTYPE html>
<html>
  <head>
    <title>MysterySearch</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= include_gon %>
  </head>
  <body>
    <% unless current_page?("/") %>
    　<header>
        <h1><a href='/home'>謎解き検索</a></h1>
        <% if logged_in? %>
          <%= image_tag @current_user.icon, class: "user-icon" %>
          <p className="user-name">ログインユーザー: <%= @current_user.name %>さん</p>
          <%= react_component 'UsersMenu', user: @current_user %>
        <% end %>
        <%= render partial: "layouts/header_nav" %>
      </header>
    <% end %>
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
    <%= yield %>
  </body>
</html>
